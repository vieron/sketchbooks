import Sketch from "../../../layouts/Sketch.astro";
---

<Sketch title="003 Line">
  <script>
    import "p5";

    let noiseMax = 0.5; // between 0 and 10
    let phase = 0;
    let zoff = 0;

    window.setup = () => {
      createCanvas(windowWidth, windowHeight);
    };

    window.draw = () => {
      let minRadius = 10;
      let maxRadius = 24;

      translate(width / 2, height / 2);
      background(color("#FFF"));
      //   strokeWeight(4);
      //   stroke(0);
      //   noFill();
      noStroke();
      fill(color("#FD7F20"));
      beginShape();
      for (let a = 0; a < TWO_PI; a += radians(1)) {
        let xoff = map(cos(a + phase), -1, 1, 0, noiseMax);
        let yoff = map(sin(a + phase), -1, 1, 0, noiseMax);
        let r = map(noise(xoff, yoff, zoff), 0, 1, minRadius, maxRadius);
        let x = r * cos(a);
        let y = r * sin(a);

        vertex(x, y);
      }
      endShape(CLOSE);
      phase += 0;
      zoff += 0.008;
    };
  </script>
</Sketch>
