---
import Sketch from "../../../layouts/Sketch.astro";
---

<Sketch title="003 Line">
  <script>
    import "p5";

    window.sketch = (p) => {
      p.setup = () => {
        p.createCanvas(p.windowWidth, p.windowHeight);
        //   p.frameRate(4);
      };

      let xoff = 0;

      p.draw = () => {
        p.background(p.color("#fca311"));

        const margin = Math.min(p.windowHeight, p.windowWidth) * 0.05;
        const r = Math.min(p.windowHeight, p.windowWidth) * 0.05;
        const y = p.windowHeight / 2;

        let min = margin + r;
        let max = p.windowWidth - margin - r;
        let x = p.noise(xoff) * (max - min) + min;
        xoff += 0.01;

        p.fill(0);
        p.circle(x, y, r);
      };
    };
  </script>
</Sketch>
