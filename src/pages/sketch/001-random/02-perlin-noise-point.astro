---
import Sketch from "../../../layouts/Sketch.astro";
---

<Sketch title="003 Line">
  <script>
    import "p5";

    window.setup = () => {
      createCanvas(windowWidth, windowHeight);
      //   frameRate(4);
    };

    let xoff = 0;

    window.draw = () => {
      background(color("#fca311"));

      const margin = Math.min(windowHeight, windowWidth) * 0.05;
      const r = Math.min(windowHeight, windowWidth) * 0.05;
      const y = windowHeight / 2;

      let min = margin + r;
      let max = windowWidth - margin - r;
      let x = noise(xoff) * (max - min) + min;
      xoff += 0.01;

      fill(0);
      circle(x, y, r);
    };
  </script>
</Sketch>
