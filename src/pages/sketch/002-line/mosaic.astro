import Sketch from "../../../layouts/Sketch.astro";
---

<Sketch title="003 Line">
  <script>
    import "p5";

    window.setup = () => {
      noLoop();
      createCanvas(windowWidth, windowHeight);
    };

    window.draw = () => {
      background(color("#fca311"));

      var step = windowWidth / 40;

      for (var x = 0; x < windowWidth; x += step) {
        for (var y = 0; y < windowHeight; y += step) {
          drawLine(x, y, step, step);
        }
      }
    };

    function drawLine(x: number, y: number, width: number, height: number) {
      var leftToRight = random() >= 0.5;

      // stroke(color('#fca311'));
      stroke(color("#14213d"));

      if (leftToRight) {
        line(x, y, x + width, y + height);
      } else {
        line(x + width, y, x, y + height);
      }

      // stroke(color('#111'));
      // noFill();
      // rect(x, y, width, height);
    }
  </script>
</Sketch>
